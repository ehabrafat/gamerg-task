<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <tb:TaskbarIcon x:Name="TrayIcon"
                        IconSource="/assets/tray_icon.ico"
                        ToolTipText="Process Monitor"
        >
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <!-- Show Menu Item -->
                    <MenuItem Header="Show">
                   
                    </MenuItem>
            
                    <!-- Separator -->
                    <Separator/>
            
                    <!-- Exit Menu Item -->
                    <MenuItem Header="Exit">
       
                    </MenuItem>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
        <DockPanel LastChildFill="True">
            <!-- Button docked to the right -->
            <Button DockPanel.Dock="Right" Click="Refresh_OnClick" Content="Refresh" 
            Margin="5" Width="80" Height="30" VerticalAlignment="Top"/>

            <ListView ItemsSource="{Binding Processes}" ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Process Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                        <GridViewColumn Header="PID" DisplayMemberBinding="{Binding Id}" Width="80"/>
                        <GridViewColumn Header="Memory (MB)" DisplayMemberBinding="{Binding Memory}" Width="100"/>
                        <GridViewColumn Header="Start Time" DisplayMemberBinding="{Binding StartTime, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}" Width="180"/>
                        <GridViewColumn Header="Responding" DisplayMemberBinding="{Binding RespondingStatus}" Width="80"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>
    </Grid>
</Window>
