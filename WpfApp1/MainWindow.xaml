<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="True">
            <!-- Button docked to the right -->
            <Button DockPanel.Dock="Right" Click="Button_Click" Content="Refresh" 
            Margin="5" Width="80" Height="30" VerticalAlignment="Top"/>

            <ListView ItemsSource="{Binding Processes}" ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Process Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                        <GridViewColumn Header="PID" DisplayMemberBinding="{Binding Id}" Width="80"/>
                        <GridViewColumn Header="Memory (MB)" DisplayMemberBinding="{Binding Memory}" Width="100"/>
                        <GridViewColumn Header="Start Time" DisplayMemberBinding="{Binding StartTime, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}" Width="180"/>
                        <GridViewColumn Header="Responding" DisplayMemberBinding="{Binding RespondingStatus}" Width="80"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>
    </Grid>
</Window>
