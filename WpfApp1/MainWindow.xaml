<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="True">
            <StackPanel DockPanel.Dock="Right" Orientation="Vertical" Margin="5" Width="150">
                <Button Click="Refresh_OnClick" Content="Refresh" 
                        Height="30"
                        Margin="0,0,0,10"
                        />
                
                <Separator />
                <StackPanel DockPanel.Dock="Top" Orientation="Vertical" Margin="5">
                    <TextBlock Text="Auto Refresh" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"
                               FontWeight="Bold"/>
                    <Button Click="StopAutoRefresh_OnClick" Content="Stop"  Margin="0,0,0,10"
                            Height="30"
                            IsEnabled="{Binding RefreshRunning}"/>
                
                    <Button Click="RunAutoRefresh_OnClick" Content="Run" 
                            Height="30"
                            IsEnabled="{Binding RefreshStopped}"/>
                </StackPanel>
                <Separator Margin="0,5,0,0"/>

                <StackPanel DockPanel.Dock="Top" Orientation="Vertical" Margin="5">
                    <TextBlock Text="Search" HorizontalAlignment="Center" Margin="0,0,0,5" FontWeight="Bold"/>
                    <TextBox x:Name="SearchTextBox" HorizontalAlignment="Stretch" Height="25"  
                             TextChanged="SearchTextBox_TextChanged"
                             VerticalContentAlignment="Center"/>
                </StackPanel>
            </StackPanel>
            
            <ListView ItemsSource="{Binding Processes}" ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Process Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                        <GridViewColumn Header="PID" DisplayMemberBinding="{Binding Id}" Width="80"/>
                        <GridViewColumn Header="Memory (MB)" DisplayMemberBinding="{Binding Memory}" Width="100"/>
                        <GridViewColumn Header="Start Time" DisplayMemberBinding="{Binding StartTime, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}" Width="180"/>
                        <GridViewColumn Header="Responding" DisplayMemberBinding="{Binding RespondingStatus}" Width="80"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>
    </Grid>
</Window>
